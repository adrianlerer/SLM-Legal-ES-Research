name: TS Unit Tests

on:
  push:
    branches: [ "main", "feat/**", "ci/**" ]
    paths:
      - "**/*.ts"
      - "package.json"
      - "tsconfig.json"
      - ".github/workflows/ts-tests.yml"
  pull_request:
    branches: [ "main" ]
    paths:
      - "**/*.ts"
      - "package.json"
      - "tsconfig.json"
      - ".github/workflows/ts-tests.yml"

permissions:
  contents: read

jobs:
  test:
    name: Node ${{ matrix.node }} on ${{ matrix.os }}
    runs-on: ${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest]
        node: [18.x, 20.x]  # LTS versions

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Use Node.js ${{ matrix.node }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node }}
          cache: npm

      - name: Install deps (CI)
        run: npm ci

      - name: Type check (tsc)
        run: npx tsc -p tsconfig.json --noEmit

      - name: Run unit tests
        run: npm test